{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Client",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/client"
      }
    },
    {
      "label": "Run Comments",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/comments"
      }
    },
    {
      "label": "Run Event Bus",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/event-bus"
      }
    },
    {
      "label": "Run Moderation",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/moderation"
      }
    },
    {
      "label": "Run Posts",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/posts"
      }
    },
    {
      "label": "Run Query",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/query"
      }
    },
    {
      "label": "Run All Services",
      "type": "shell",
      "dependsOn": [
        "Run Client",
        "Run Comments",
        "Run Event Bus",
        "Run Moderation",
        "Run Posts",
        "Run Query"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
